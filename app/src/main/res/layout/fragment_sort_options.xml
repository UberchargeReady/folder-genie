<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".fragment.SortOptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_selected_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select folder"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_browse_directories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Browse" />

        <EditText
            android:id="@+id/editText_file_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="file group"
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_sort_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="sort methods"
            android:inputType="text" />

        <Button
            android:id="@+id/button_check_sort_parameters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check sort parameters" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_sort_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(folder sort parameters)"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/button_begin_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin sort"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>