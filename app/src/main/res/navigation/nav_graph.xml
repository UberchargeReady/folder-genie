<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SortOptionsFragment">

    <fragment
        android:id="@+id/SortOptionsFragment"
        android:name="com.dyejeekis.foldergenie.fragment.SortOptionsFragment"
        android:label="@string/sort_options_fragment_label"
        tools:layout="@layout/fragment_sort_options">

        <action
            android:id="@+id/beginSortAction"
            app:destination="@id/SortProgressFragment"/>

    </fragment>

<!--    todo maybe change id and label-->
    <fragment
        android:id="@+id/SortProgressFragment"
        android:name="com.dyejeekis.foldergenie.fragment.OperationProgressFragment"
        android:label="@string/sort_progress_fragment_label"
        tools:layout="@layout/fragment_operation_progress">

        <argument
            android:name="folderOperation"
            app:argType="com.dyejeekis.foldergenie.model.operation.FolderOperation" />

    </fragment>

</navigation>