<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SortOptionsFragment">

    <fragment
        android:id="@+id/SortOptionsFragment"
        android:name="com.dyejeekis.foldergenie.SortOptionsFragment"
        android:label="@string/sort_options_fragment_label"
        tools:layout="@layout/fragment_sort_options">

        <action
            android:id="@+id/action_SortOptionsFragment_to_SortProgressFragment"
            app:destination="@id/SortProgressFragment"/>

    </fragment>

    <fragment
        android:id="@+id/SortProgressFragment"
        android:name="com.dyejeekis.foldergenie.SortProgressFragment"
        android:label="@string/sort_progress_fragment_label"
        tools:layout="@layout/fragment_sort_progress">

        <action
            android:id="@+id/action_SortProgressFragment_to_SortOptionsFragment"
            app:destination="@id/SortOptionsFragment"/>

    </fragment>

</navigation>